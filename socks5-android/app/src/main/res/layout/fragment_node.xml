<LinearLayout
    android:id="@+id/open_dialog_node"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="10dp"
    android:paddingVertical="20dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/main_radius">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/internet" />
    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/theme_text_light"
        android:text="@string/node" />
    <TextView
        android:id="@+id/current_node_host"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/theme_text_link"
        android:text="@string/node_current_host" />
    <TextView
        android:id="@+id/current_node_speed"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/theme_text_status_succeed"
        android:text="" />
    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/more" />
</LinearLayout>
