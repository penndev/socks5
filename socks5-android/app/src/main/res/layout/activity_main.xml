<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingHorizontal="8dp"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/input_host"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="45dp"
            android:hint="@string/activity_main_ip_hits"
            android:paddingStart="6dp"
            tools:ignore="MissingConstraints"></EditText>

    <EditText
            android:id="@+id/input_port"
            android:inputType="number"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/activity_main_port_hits"
            android:paddingStart="6dp"
            tools:ignore="MissingConstraints"></EditText>


    <EditText
            android:id="@+id/input_user"
            android:inputType="text"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/activity_main_name_hits"
            android:paddingStart="6dp"
    ></EditText>

    <EditText
            android:id="@+id/input_pass"
            android:layout_marginTop="20dp"
            android:inputType="numberPassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="@string/activity_main_passwd_hits"
            android:paddingStart="6dp"
    ></EditText>

    <Button
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:textSize="16dp"
            android:text="@string/activity_main_select_app"
            android:paddingLeft="6dp"
            android:textColor="@color/black"
            android:gravity="left|center"
            android:onClick="handleAllowApp"
    ></Button>

    <Button
            android:id="@+id/handle_start"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp"
            android:layout_height="50dp"
            android:onClick="handleStart"
            android:text="连接"
    ></Button>

    <Button
            android:id="@+id/handle_stop"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="50dp"
            android:onClick="handleStop"
            android:text="断开"
    ></Button>

</androidx.appcompat.widget.LinearLayoutCompat>